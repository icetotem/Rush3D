material:
{
    type  = "surface";
    shading_model = "default_lit";
    vs  = "assets/engine/shaders/geometry.vert";
    fs  = "assets/engine/shaders/gbufferpass.frag";

    uniforms = (
        { binding=0; type="texture"; name = "u_baseColor"; path="assets/Bricks051_2K_Color.jpg"; },
        { binding=1; type="sampler"; name = "u_baseColorSampler"; address="repeat"; mag="linear"; min="linear"; mip="linear"; }
    );

    code = "
        vec4 color = texture(sampler2D(u_baseColor, u_baseColorSampler), getTexCoord0());
        material.baseColor = color.rgb;
    ";
}